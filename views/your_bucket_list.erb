<h1>Your Bucket List</h1>

<a href="/countries/new">Add New Country</a>
<a href="cities/new">Add New City</a>

<br><br>

<table>
  <tr class="darkrow">
    <th></th>
    <th>Name:</th>
    <th>Visited?</th>
    <th></th>
    <th></th>
  </tr>

<% for country in @countries %>
  <tr class="mediumrow">
    <td>Country:</td>
    <td><a href="/countries/<%=country.id%>"><%= country.name %></a></td>
    <td><% if country.has_visited == "t" %>
          <%= "yes" %>
        <% else %>
          <%= "no" %>
        <% end %></td>
    <td><a href="countries/<%=country.id%>/edit">Edit</a></td>
    <td><form action="/countries/<%=country.id%>/delete" method="post">
      <input type="submit" value="Delete Country"></td>
  </tr>

  <% for city in @cities %>
    <% if city.country_id == country.id %>
    <tr class="lightrow">
      <td>City:</td>
      <td>-<a href="cities/<%=city.id%>"><%= city.name %></a></td>
      <td><% if city.has_visited == "t" %>
            <%= "yes" %>
          <% else %>
            <%= "no" %>
          <% end %></td>
      <td><a href="cities/<%=city.id%>/edit">Edit</a></td>
      <td><form action="cities/<%=city.id%>/delete" method="post">
            <input type="submit" value="Delete City">
          </form></td>
    </tr>
    <% end %>
  <% end %>
<% end %>
</table>

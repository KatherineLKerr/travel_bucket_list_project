<h1>Your Bucket List</h1>

<a class="button" href="/countries/new">Add Country</a>
<a class="button" href="/cities/new">Add City</a>

<ul>
<% for country in @countries %>
  <li class="country-li">
    <%= country.name %>
    <a href="countries/edit">Edit</a>
      <ol><br>
        <% for city in @cities %>
          <% if city.country_id == country.id %>
            <li class="city-li">
              <%= city.name %>
              <a href="cities/edit">Edit</a>
            </li><br>
          <% end %>
        <% end %>
      </ol>
  </li>
<% end %>
</ul>
